<?xml version="1.0" encoding="utf-8"?>
<Plugin>
    <Name>JsonSvip</Name>
    <Version>1.0.0</Version>
    <Author>YQ之神</Author>
    <HomePage>https://space.bilibili.com/102844209</HomePage>
    <Descriptions>OpenSVIP Model 的 JSON 格式转换插件。</Descriptions>
    <Requirements>无</Requirements>
    <Format>OpenSVIP 文件</Format>
    <Suffix>json</Suffix>
    <Identifier>json</Identifier>
    <LibraryPath>OpenSvip\Plugin.JsonSvip.dll</LibraryPath>
    <Converter>OpenSvip.Stream.JsonSvipConverter</Converter>
    <InputOptions/>
    <OutputOptions>
        <Option Name="indented" Type="boolean" Default="false">
            <Notes>生成带缩进格式的 JSON 文件</Notes>
			<Tips>缩进格式便于阅读与修改，但会占据较大的文件体积。</Tips>
        </Option>
    </OutputOptions>
</Plugin>
