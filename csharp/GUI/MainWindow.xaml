<panuon:WindowX
    x:Class="OpenSvip.GUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:OpenSvip.GUI"
    xmlns:framework="clr-namespace:OpenSvip.Framework;assembly=OpenSvip.Framework"
    xmlns:config="clr-namespace:OpenSvip.GUI.Config"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:panuon="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
    mc:Ignorable="d"
    Title="OpenSVIP - 歌声合成工程文件转换器（公测版本）"
    FontFamily="Microsoft YaHei UI"
    Height="800"
    Width="1200"
    MinHeight="480"
    MinWidth="640"
    Style="{StaticResource MaterialDesignWindow}"
    panuon:WindowXCaption.Height="32"
    WindowStartupLocation="CenterScreen"
    SourceInitialized="MainWindow_SourceInitialized"
    Closing="Window_Closing">
    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>
    <panuon:WindowXCaption.MinimizeButtonStyle>
        <Style TargetType="Button" BasedOn="{StaticResource {ComponentResourceKey ResourceId=MinimizeButtonStyle, TypeInTargetAssembly={x:Type panuon:WindowXCaption}}}">
            <Setter Property="MaxWidth" Value="48"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Opacity">
                <Setter.Value>
                    <Binding
                        RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=Window}"
                        Path="IsActive"
                        Converter="{StaticResource BooleanSwitchOperationConverter}"
                        ConverterParameter="1;0.6"
                        Mode="OneWay"/>
                </Setter.Value>
            </Setter>
        </Style>
    </panuon:WindowXCaption.MinimizeButtonStyle>
    <panuon:WindowXCaption.MaximizeButtonStyle>
        <Style TargetType="Button" BasedOn="{StaticResource {ComponentResourceKey ResourceId=MaximizeButtonStyle, TypeInTargetAssembly={x:Type panuon:WindowXCaption}}}">
            <Setter Property="MaxWidth" Value="48"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Opacity">
                <Setter.Value>
                    <Binding
                        RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=Window}"
                        Path="IsActive"
                        Converter="{StaticResource BooleanSwitchOperationConverter}"
                        ConverterParameter="1;0.6"
                        Mode="OneWay"/>
                </Setter.Value>
            </Setter>
        </Style>
    </panuon:WindowXCaption.MaximizeButtonStyle>
    <panuon:WindowXCaption.CloseButtonStyle>
        <Style TargetType="Button" BasedOn="{StaticResource {ComponentResourceKey ResourceId=CloseButtonStyle, TypeInTargetAssembly={x:Type panuon:WindowXCaption}}}">
            <Setter Property="MaxWidth" Value="48"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Opacity">
                <Setter.Value>
                    <Binding
                        RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=Window}"
                        Path="IsActive"
                        Converter="{StaticResource BooleanSwitchOperationConverter}"
                        ConverterParameter="1;0.6"
                        Mode="OneWay"/>
                </Setter.Value>
            </Setter>
        </Style>
    </panuon:WindowXCaption.CloseButtonStyle>
    <Window.DataContext>
        <local:AppModel/>
    </Window.DataContext>
    <Window.InputBindings>
        <KeyBinding Gesture="Ctrl+I" Command="{x:Static local:MainWindow.ImportCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:MainWindow}}"/>
        <KeyBinding Gesture="Ctrl+E" Command="{x:Static local:MainWindow.ExportCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:MainWindow}}"/>
        <KeyBinding Gesture="Ctrl+Shift+E" Command="{x:Static local:MainWindow.BrowseAndExportCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:MainWindow}}"/>
        <KeyBinding Gesture="Ctrl+R" Command="{x:Static local:MainWindow.ResetCommand}" CommandParameter="{Binding}"/>
        <KeyBinding Gesture="Ctrl+W" Command="{x:Static local:MainWindow.SwapPluginCommand}" CommandParameter="{Binding}"/>
        <KeyBinding Gesture="Ctrl+P" Command="{x:Static local:MainWindow.InstallPluginCommand}" CommandParameter="{Binding}"/>
        <KeyBinding Gesture="Ctrl+U" Command="{x:Static local:MainWindow.CheckUpdateCommand}"/>
        <KeyBinding Gesture="Ctrl+A" Command="{x:Static local:MainWindow.AboutCommand}" CommandParameter="{Binding}"/>
    </Window.InputBindings>
    <panuon:WindowXCaption.HeaderTemplate>
        <DataTemplate>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <!--<Image Source="{Binding Icon}"/>-->
                <materialDesign:PackIcon
                    Grid.Column="0"
                    Kind="SwapVerticalCircle"
                    VerticalAlignment="Center"
                    Width="20"
                    Height="20"
                    Margin="10 0 0 0">
                    <materialDesign:PackIcon.Opacity>
                        <Binding
                            RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=Window}"
                            Path="IsActive"
                            Converter="{StaticResource BooleanSwitchOperationConverter}"
                            ConverterParameter="1;0.6"
                            Mode="OneWay"/>
                    </materialDesign:PackIcon.Opacity>
                </materialDesign:PackIcon>
                <Menu
                    Grid.Column="1"
                    IsMainMenu="True"
                    VerticalAlignment="Center"
                    Margin="5 3 5 0"
                    Height="25"
                    FontFamily="Microsoft YaHei UI"
                    FontSize="13"
                    FontWeight="Normal"
                    panuon:WindowX.IsDragMoveArea="False"
                    IsEnabled="{Binding IsOpen, ElementName=RootDialogHost, Converter={StaticResource InvertBooleanConverter}}">
                    <Menu.Resources>
                        <Style TargetType="MenuItem" BasedOn="{StaticResource MaterialDesignMenuItem}">
                            <Setter Property="Height" Value="30"/>
                        </Style>
                        <Style x:Key="NarrowCheckableMenuItem" TargetType="MenuItem" BasedOn="{StaticResource MaterialDesignMenuItem}">
                            <Setter Property="Margin" Value="-10 0 -5 0"/>
                            <Setter Property="IsCheckable" Value="True"/>
                        </Style>
                        <Style x:Key="MenuItemSeparator" TargetType="Separator" BasedOn="{StaticResource MaterialDesignSeparator}">
                            <Setter Property="Margin" Value="10 0"/>
                        </Style>
                    </Menu.Resources>
                    <MenuItem Header="文件(_F)" Height="22" Padding="10 0">
                        <MenuItem
                            Header="导入文件(_I)..."
                            InputGestureText="Ctrl+I"
                            Icon="{materialDesign:PackIcon Kind=TrayArrowDown}"
                            Click="FileMaskPanel_Click">
                            <MenuItem.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAllConverter}" Mode="OneWay">
                                    <Binding Path="HasAnyPlugin"/>
                                    <Binding Path="ExecutionInProgress" Converter="{StaticResource InvertBooleanConverter}"/>
                                </MultiBinding>
                            </MenuItem.IsEnabled>
                        </MenuItem>
                        <MenuItem
                            Header="导出文件(_E)"
                            Icon="{materialDesign:PackIcon Kind=ShareAllOutline}"
                            IsEnabled="{Binding IsEnabled, ElementName=StartExecutionButton}">
                            <MenuItem
                                Header="立即开始转换(_N)"
                                InputGestureText="Ctrl+E"
                                Click="StartExecutionButton_Click"/>
                            <MenuItem
                                Header="选择输出路径(_B)..."
                                InputGestureText="Ctrl+Shift+E"
                                Click="BrowseAndExportMenu_Click"/>
                        </MenuItem>
                        <MenuItem
                            Header="重置列表(_R)"
                            Icon="{materialDesign:PackIcon Kind=Autorenew}"
                            InputGestureText="Ctrl+R"
                            IsEnabled="{Binding HasItems, ElementName=TaskListView}"
                            Click="ClearTasksButton_Click"/>
                    </MenuItem>
                    <MenuItem Header="转换(_C)" Height="22" Padding="10 0">
                        <MenuItem.Resources>
                            <Style x:Key="PluginMenuItem" TargetType="MenuItem" BasedOn="{StaticResource NarrowCheckableMenuItem}">
                                <Setter Property="IsEnabled" Value="{Binding ExecutionInProgress, Converter={StaticResource InvertBooleanConverter}, Mode=OneWay}"/>
                                <Setter Property="Header">
                                    <Setter.Value>
                                        <MultiBinding Mode="OneWay">
                                            <MultiBinding.Converter>
                                                <local:PluginMenuItemHeaderConverter/>
                                            </MultiBinding.Converter>
                                            <Binding/>
                                            <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType=MenuItem}" Path="ItemsSource"/>
                                        </MultiBinding>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="CommandParameter" Value="{Binding RelativeSource={RelativeSource Self}}"/>
                            </Style>
                        </MenuItem.Resources>
                        <MenuItem Header="导入格式(_F)" IsEnabled="{Binding HasAnyPlugin}" ItemsSource="{Binding Plugins}">
                            <MenuItem.ItemContainerStyle>
                                <Style TargetType="MenuItem" BasedOn="{StaticResource PluginMenuItem}">
                                    <Setter Property="IsChecked">
                                        <Setter.Value>
                                            <MultiBinding Converter="{StaticResource ItemIsCheckedConverter}" Mode="OneWay">
                                                <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=local:MainWindow}" Path="DataContext.SelectedInputPluginIndex" Mode="OneWay"/>
                                                <Binding/>
                                                <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=MenuItem}" Path="ItemsSource"/>
                                            </MultiBinding>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Command" Value="{x:Static local:MainWindow.ImportPluginMenuItemCommand}"/>
                                </Style>
                            </MenuItem.ItemContainerStyle>
                        </MenuItem>
                        <MenuItem Header="导出格式(_T)" IsEnabled="{Binding HasAnyPlugin}" ItemsSource="{Binding Plugins}">
                            <MenuItem.ItemContainerStyle>
                                <Style TargetType="MenuItem" BasedOn="{StaticResource PluginMenuItem}">
                                    <Setter Property="IsChecked">
                                        <Setter.Value>
                                            <MultiBinding Converter="{StaticResource ItemIsCheckedConverter}" Mode="OneWay">
                                                <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=local:MainWindow}" Path="DataContext.SelectedOutputPluginIndex" Mode="OneWay"/>
                                                <Binding/>
                                                <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=MenuItem}" Path="ItemsSource"/>
                                            </MultiBinding>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Command" Value="{x:Static local:MainWindow.ExportPluginMenuItemCommand}"/>
                                </Style>
                            </MenuItem.ItemContainerStyle>
                        </MenuItem>
                        <MenuItem Header="上下交换(_W)" InputGestureText="Ctrl+W" Icon="{materialDesign:PackIcon Kind=SwapVertical, Size=18}" Command="{x:Static local:MainWindow.SwapPluginCommand}" CommandParameter="{Binding}"/>
                        <Separator Style="{StaticResource MenuItemSeparator}"/>
                        <MenuItem Header="安装插件(_P)..." InputGestureText="Ctrl+P" Icon="{materialDesign:PackIcon Kind=PuzzlePlusOutline}" Command="{x:Static local:MainWindow.InstallPluginCommand}" CommandParameter="{Binding}"/>
                        <MenuItem
                            Header="插件市场(_M)"
                            Icon="{materialDesign:PackIcon
                            Kind=CloudSearchOutline}"
                            Command="{x:Static local:RelayCommands.StartProcessCommand}"
                            CommandParameter="{x:Static framework:ConstValues.PluginMarket}"/>
                    </MenuItem>
                    <MenuItem Header="设置(_O)" Height="22" Padding="10 0">
                        <MenuItem Header="自动检测导入格式(_D)" IsCheckable="True" IsChecked="{Binding AutoDetectFormat}"
                                  IsEnabled="{Binding ExecutionInProgress, Converter={StaticResource InvertBooleanConverter}}"/>
                        <MenuItem Header="切换格式时重置列表(_R)" IsCheckable="True" IsChecked="{Binding AutoResetTasks}"
                                  IsEnabled="{Binding ExecutionInProgress, Converter={StaticResource InvertBooleanConverter}}"/>
                        <MenuItem Header="自动设置后缀名(_E)" IsCheckable="True" IsChecked="{Binding AutoExtension}"
                                  IsEnabled="{Binding ExecutionInProgress, Converter={StaticResource InvertBooleanConverter}}"/>
                        <MenuItem Header="完成后打开输出路径(_O)" IsCheckable="True" IsChecked="{Binding OpenExportFolder}"/>
                        <MenuItem Header="遇到同名文件时(_H)" HorizontalContentAlignment="Stretch" ItemContainerStyle="{StaticResource NarrowCheckableMenuItem}"
                                  IsEnabled="{Binding ExecutionInProgress, Converter={StaticResource InvertBooleanConverter}}">
                            <MenuItem Header="覆盖(_C)"
                                      IsChecked="{Binding SelectedIndex, ElementName=OverwriteOptionComboBox, Converter={StaticResource IntegerConstantEqualsConverter}, ConverterParameter=0}"/>
                            <MenuItem Header="跳过(_S)"
                                      IsChecked="{Binding SelectedIndex, ElementName=OverwriteOptionComboBox, Converter={StaticResource IntegerConstantEqualsConverter}, ConverterParameter=1}"/>
                            <MenuItem Header="询问(_A)"
                                      IsChecked="{Binding SelectedIndex, ElementName=OverwriteOptionComboBox, Converter={StaticResource IntegerConstantEqualsConverter}, ConverterParameter=2}"/>
                        </MenuItem>
                        <MenuItem Header="默认输出路径(_P)" ItemContainerStyle="{StaticResource NarrowCheckableMenuItem}"
                                  IsEnabled="{Binding ExecutionInProgress, Converter={StaticResource InvertBooleanConverter}}">
                            <MenuItem Header="无(_N)"
                                      IsChecked="{Binding SelectedIndex, ElementName=HiddenDefaultExportComboBox, Converter={StaticResource IntegerConstantEqualsConverter}, ConverterParameter=0}"
                                      IsEnabled="{Binding ExecutionInProgress, Converter={StaticResource InvertBooleanConverter}}"/>
                            <MenuItem Header="源路径(_S)"
                                      IsChecked="{Binding SelectedIndex, ElementName=HiddenDefaultExportComboBox, Converter={StaticResource IntegerConstantEqualsConverter}, ConverterParameter=1}"
                                      IsEnabled="{Binding ExecutionInProgress, Converter={StaticResource InvertBooleanConverter}}"/>
                            <MenuItem Header="桌面(_D)"
                                      IsChecked="{Binding SelectedIndex, ElementName=HiddenDefaultExportComboBox, Converter={StaticResource IntegerConstantEqualsConverter}, ConverterParameter=2}"
                                      IsEnabled="{Binding ExecutionInProgress, Converter={StaticResource InvertBooleanConverter}}"/>
                            <MenuItem Header="自定义(_C)"
                                      IsChecked="{Binding SelectedIndex, ElementName=HiddenDefaultExportComboBox, Converter={StaticResource IntegerConstantEqualsConverter}, ConverterParameter=3}"
                                      ToolTip="{Binding SelectedCustomExportPath}">
                                <MenuItem.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAllConverter}" Mode="OneWay">
                                        <Binding Path="ExecutionInProgress" Converter="{StaticResource InvertBooleanConverter}"/>
                                        <Binding Path="SelectedCustomExportPath" Converter="{StaticResource NotNullConverter}"/>
                                    </MultiBinding>
                                </MenuItem.IsEnabled>
                            </MenuItem>
                            <Separator Style="{StaticResource MenuItemSeparator}"/>
                            <MenuItem
                                Header="管理自定义路径(M)..."
                                Icon="{materialDesign:PackIcon Kind=FormatListBulleted}"
                                IsCheckable="False"
                                Command="{x:Static local:MainWindow.ManagePathsCommand}"
                                CommandParameter="{Binding}"/>
                        </MenuItem>
                        <Separator Style="{StaticResource MenuItemSeparator}"/>
                        <MenuItem Header="启用多线程转换(_A)" IsCheckable="True" IsChecked="{Binding EnableMultiThreading}"
                                  IsEnabled="{Binding ExecutionInProgress, Converter={StaticResource InvertBooleanConverter}}"/>
                        <MenuItem Header="开启更新提醒(_U)" IsCheckable="True" IsChecked="{Binding CheckForUpdates}"/>
                        <MenuItem Header="外观主题(_T)" Icon="{materialDesign:PackIcon Kind=PaletteOutline}" ItemContainerStyle="{StaticResource NarrowCheckableMenuItem}">
                            <MenuItem
                                Header="浅色(_L)"
                                IsChecked="{Binding SelectedIndex, ElementName=HiddenAppearanceThemeComboBox, Converter={StaticResource IntegerConstantEqualsConverter}, ConverterParameter=0}"/>
                            <MenuItem
                                Header="深色(_D)"
                                IsChecked="{Binding SelectedIndex, ElementName=HiddenAppearanceThemeComboBox, Converter={StaticResource IntegerConstantEqualsConverter}, ConverterParameter=1}"/>
                            <MenuItem
                                Header="系统(_S)"
                                IsChecked="{Binding SelectedIndex, ElementName=HiddenAppearanceThemeComboBox, Converter={StaticResource IntegerConstantEqualsConverter}, ConverterParameter=2}"/>
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="帮助(_H)" Height="22" Padding="10 0">
                        <MenuItem
                            Header="在线文档(_M)"
                            Icon="{materialDesign:PackIcon Kind=TextBoxSearchOutline}"
                            InputGestureText="Ctrl+H"
                            Command="{x:Static local:RelayCommands.StartProcessCommand}"
                            CommandParameter="{x:Static config:Information.OnlineDocuments}"/>
                        <MenuItem
                            Header="检查更新(_U)"
                            Icon="{materialDesign:PackIcon Kind=UploadMultiple}"
                            InputGestureText="Ctrl+U"
                            Command="{x:Static local:MainWindow.CheckUpdateCommand}"/>
                        <MenuItem Header="关于 OpenSVIP(_A)" Icon="{materialDesign:PackIcon Kind=InformationOutline}" InputGestureText="Ctrl+A" Command="{x:Static local:MainWindow.AboutCommand}"/>
                    </MenuItem>
                </Menu>
                <Separator Grid.Column="2" Width="18" Margin="0 1 0 0" Opacity="0.6">
                    <Separator.LayoutTransform>
                        <TransformGroup>
                            <TransformGroup.Children>
                                <TransformCollection>
                                    <RotateTransform Angle="90"/>
                                </TransformCollection>
                            </TransformGroup.Children>
                        </TransformGroup>
                    </Separator.LayoutTransform>
                </Separator>
                <TextBlock
                    Grid.Column="3"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="17 2 5 0"
                    FontSize="14"
                    Text="{Binding Title, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                    TextTrimming="CharacterEllipsis">
                    <TextBlock.Opacity>
                        <Binding
                            RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=Window}"
                            Path="IsActive"
                            Converter="{StaticResource BooleanSwitchOperationConverter}"
                            ConverterParameter="1;0.6"
                            Mode="OneWay"/>
                    </TextBlock.Opacity>
                </TextBlock>
            </Grid>
        </DataTemplate>
    </panuon:WindowXCaption.HeaderTemplate>
    <materialDesign:DialogHost x:Name="RootDialogHost" Identifier="RootDialogHost">
        <Grid>
            <Grid Visibility="Collapsed">
                <Grid.Resources>
                    <x:Array x:Key="DefaultExportEnumValues" Type="config:ExportPaths">
                        <config:ExportPaths>Unset</config:ExportPaths>
                        <config:ExportPaths>Source</config:ExportPaths>
                        <config:ExportPaths>Desktop</config:ExportPaths>
                        <config:ExportPaths>Custom</config:ExportPaths>
                    </x:Array>
                    <x:Array x:Key="AppearanceThemeEnumValues" Type="config:AppearanceThemes">
                        <config:AppearanceThemes>Light</config:AppearanceThemes>
                        <config:AppearanceThemes>Dark</config:AppearanceThemes>
                        <config:AppearanceThemes>System</config:AppearanceThemes>
                    </x:Array>
                </Grid.Resources>
                <Grid>
                    <ComboBox
                        x:Name="HiddenDefaultExportComboBox"
                        ItemsSource="{StaticResource DefaultExportEnumValues}"
                        SelectedIndex="{Binding DefaultExportPath, Converter={StaticResource IndexToEnumValueConverter}, ConverterParameter={x:Type config:ExportPaths}}"/>
                    <ComboBox
                        x:Name="HiddenAppearanceThemeComboBox"
                        ItemsSource="{StaticResource AppearanceThemeEnumValues}"
                        SelectedIndex="{Binding AppearanceThemes, Converter={StaticResource IndexToEnumValueConverter}, ConverterParameter={x:Type config:AppearanceThemes}}">
                    </ComboBox>
                </Grid>
            </Grid>
            <Grid
                Width="600"
                Height="280"
                Visibility="{Binding HasAnyPlugin, Converter={StaticResource InverseBoolToVisConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    Margin="20"
                    FontSize="30"
                    Foreground="{StaticResource FunctionalAreaIconBrush}"
                    Text="  当前未安装任何插件。您可以：">
                </TextBlock>
                <Button
                    x:Name="VisitMarketMaskPanel"
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="250"
                    Height="180"
                    Opacity="0"
                    Panel.ZIndex="16"
                    Cursor="Hand"
                    ToolTip="{x:Static framework:ConstValues.PluginMarket}"
                    MouseEnter="VisitMarketMaskPanel_Focus"
                    MouseLeave="VisitMarketMaskPanel_UnFocus"
                    Command="{x:Static local:RelayCommands.StartProcessCommand}"
                    CommandParameter="{x:Static framework:ConstValues.PluginMarket}"/>
                <DockPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Height="240"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                    <materialDesign:PackIcon
                        x:Name="VisitMarketPluginIcon"
                        DockPanel.Dock="Top"
                        Kind="CloudSearchOutline"
                        Margin="0 52 0 -2"
                        HorizontalAlignment="Center"
                        Width="100"
                        Height="100"
                        Opacity="0.4"
                        Foreground="{StaticResource FunctionalAreaIconBrush}"/>
                    <TextBlock
                        DockPanel.Dock="Bottom"
                        Text="访问在线插件市场"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0 5 0 0"
                        FontSize="25"
                        Opacity="{Binding Opacity, ElementName=VisitMarketPluginIcon}"
                        Foreground="{StaticResource FunctionalAreaIconBrush}"/>
                </DockPanel>
                <Button
                    Grid.Row="1"
                    x:Name="InstallPluginMaskPanel"
                    Grid.Column="1"
                    Width="250"
                    Height="180"
                    Opacity="0"
                    Panel.ZIndex="16"
                    Cursor="Hand"
                    ToolTip="下载插件压缩包后进行安装"
                    MouseEnter="InstallPluginMaskPanel_Focus"
                    MouseLeave="InstallPluginMaskPanel_UnFocus"
                    Command="{x:Static local:MainWindow.InstallPluginCommand}"
                    CommandParameter="{Binding}"/>
                <DockPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    Height="240"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                    <materialDesign:PackIcon
                        x:Name="InstallPluginIcon"
                        DockPanel.Dock="Top"
                        Kind="PuzzlePlusOutline"
                        Margin="0 50 0 0"
                        HorizontalAlignment="Center"
                        Width="100"
                        Height="100"
                        Opacity="0.4"
                        Foreground="{StaticResource FunctionalAreaIconBrush}"/>
                    <TextBlock
                        DockPanel.Dock="Bottom"
                        Text="从压缩包安装插件"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0 5 0 0"
                        FontSize="25"
                        Opacity="{Binding Opacity, ElementName=InstallPluginIcon}"
                        Foreground="{StaticResource FunctionalAreaIconBrush}"/>
                </DockPanel>
                <materialDesign:PopupBox
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    Margin="10"
                    PlacementMode="BottomAndAlignCentres"
                    ToolTip="点击查看详细说明"
                    StaysOpen="True"
                    Cursor="Hand">
                    <materialDesign:PopupBox.ToggleContent>
                        <TextBlock
                            HorizontalAlignment="Center"
                            Foreground="{StaticResource FunctionalAreaIconBrush}"
                            Text="为什么要安装插件?">
                            <TextBlock.TextDecorations>
                                <TextDecoration PenOffset="2.5"/>
                            </TextBlock.TextDecorations>
                        </TextBlock>
                    </materialDesign:PopupBox.ToggleContent>
                    <TextBlock
                        Margin="16 8"
                        MaxWidth="480"
                        LineHeight="20"
                        TextWrapping="Wrap">
                        每个插件都代表着对一种格式的支持，因此您需要安装插件才可开启转换流程。<LineBreak/>
                        转换器本体与插件是分别安装、相互脱离的，这是为了方便对每个插件进行单独的更新、扩展和优化。<LineBreak/>
                        您只需选择那些对自己感兴趣的格式提供支持的插件，无需全部安装。当新的插件上线或已有插件更新时，您可以访问插件市场并下载安装新的功能，而无需更新整个转换器应用。<LineBreak/>
                        所有插件均只需安装一次，后续使用几乎不受转换器更新的影响。
                    </TextBlock>
                </materialDesign:PopupBox>
                <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Orientation="Horizontal">
                    <TextBlock Text="仍有疑问？查看 "/>
                    <TextBlock VerticalAlignment="Center" Margin="0 0 4 0">
                        <Hyperlink
                            Foreground="{StaticResource FunctionalAreaIconBrush}"
                            ToolTip="{x:Static config:Information.OnlineDocuments}"
                            Cursor="Hand"
                            Command="{x:Static local:RelayCommands.StartProcessCommand}"
                            CommandParameter="{x:Static config:Information.OnlineDocuments}">
                            <Hyperlink.TextDecorations>
                                <TextDecorationCollection>
                                    <TextDecoration PenOffset="2.5"/>
                                </TextDecorationCollection>
                            </Hyperlink.TextDecorations>
                            <TextBlock
                                Text="帮助文档"/>
                        </Hyperlink>
                    </TextBlock>
                    <materialDesign:PackIcon
                        Margin="-5 -5 0 0"
                        VerticalAlignment="Center"
                        Kind="ArrowTopRightThick"
                        Width="10"
                        Height="10"
                        Foreground="{StaticResource FunctionalAreaIconBrush}"/>
                </StackPanel>
            </Grid>
            <Grid d:Visibility="Visible" Visibility="{Binding HasAnyPlugin, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition MinWidth="350"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <materialDesign:Card
                        x:Name="PluginSelectionCard"
                        Grid.Row="0"
                        Margin="20 5 8 8"
                        Padding="0 0 0 5">
                        <materialDesign:Card.Resources>
                            <Style x:Key="PluginComboBoxItemTextBlock" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignTextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Text">
                                    <Setter.Value>
                                        <MultiBinding StringFormat="{}{0} (*.{1})">
                                            <Binding Path="Format"/>
                                            <Binding Path="Suffix"/>
                                        </MultiBinding>
                                    </Setter.Value>
                                </Setter>
                            </Style>
